@page
@using Data.Enums
@model Accounts.DetailsModel
@{
    ViewData["Title"] = "Account Details";
}

<h1>
    View Account
</h1>
<form class="w-50">
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.FullName" class="text-muted"></label>
        <input asp-for="@Model.Account.FullName" class="form-control" disabled>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.EmailAddress" class="text-muted"></label>
        <input asp-for="@Model.Account.EmailAddress" class="form-control" disabled>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.PhoneNumber" class="text-muted"></label>
        <input asp-for="@Model.Account.PhoneNumber" class="form-control" disabled>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.PersonalUrl" class="text-muted"></label>
        <input asp-for="@Model.Account.PersonalUrl" class="form-control" disabled>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.YearsOfAge" class="text-muted"></label>
        <input asp-for="@Model.Account.YearsOfAge" class="form-control" disabled>
    </div>
    <div class="form-group mt-3">
        <input asp-for="@Model.Account.IsExternalContractor" class="form-check-input" disabled>
        <label asp-for="@Model.Account.IsExternalContractor" class="form-check-label"></label>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.RelationshipStatus" class="text-muted"></label>
        <br>
        <select asp-for="@Model.Account.RelationshipStatus" asp-items="Html.GetEnumSelectList<RelationshipStatus>()" disabled>
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.Note" class="text-muted"></label>
        <br>
        <textarea asp-for="@Model.Account.Note" class="form-control" disabled></textarea>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.CreatedAt" class="text-muted"></label>
        <input asp-for="@Model.Account.CreatedAt" class="form-control" disabled>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Account.UpdatedAt" class="text-muted"></label>
        <input asp-for="@Model.Account.UpdatedAt" class="form-control" disabled>
    </div>
    <a asp-page="/Accounts/Index" class="mt-3 btn btn-secondary">Go Back</a>
</form>

