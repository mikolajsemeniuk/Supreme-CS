@page
@using Data.Enums
@model Accounts.AddModel
@{
    ViewData["Title"] = "Add Account";
}

<h1>
    Add Account
</h1>
<form method="post" class="w-50">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.FullName" class="text-muted"></label>
        <input asp-for="@Model.Input.FullName" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.EmailAddress" class="text-muted"></label>
        <input asp-for="@Model.Input.EmailAddress" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.PhoneNumber" class="text-muted"></label>
        <input asp-for="@Model.Input.PhoneNumber" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.PersonalUrl" class="text-muted"></label>
        <input asp-for="@Model.Input.PersonalUrl" class="form-control">
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.YearsOfAge" class="text-muted"></label>
        <input asp-for="@Model.Input.YearsOfAge" class="form-control">
    </div>
    <div class="form-group mt-3">
        <input asp-for="@Model.Input.IsExternalContractor" class="form-check-input">
        <label asp-for="@Model.Input.IsExternalContractor" class="form-check-label"></label>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.RelationshipStatus" class="text-muted"></label>
        <br>
        <select asp-for="@Model.Input.RelationshipStatus" asp-items="Html.GetEnumSelectList<RelationshipStatus>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.Note" class="text-muted"></label>
        <br>
        <textarea asp-for="@Model.Input.Note" class="form-control"></textarea>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Submit</button>
    <a asp-page="/Accounts/Index" class="mt-3 btn btn-secondary">Go Back</a>
</form>