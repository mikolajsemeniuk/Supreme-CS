@page
@using Data.Enums
@model Orders.AddModel
@{
    ViewData["Title"] = "Add Account";
}

<h1>
    Add Order
</h1>
<form method="post" class="w-50">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mt-3">
        <label asp-for="@Model.Input.Name" class="text-muted"></label>
        <input asp-for="@Model.Input.Name" class="form-control">
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Submit</button>
    <a asp-page="/Orders/Index" class="mt-3 btn btn-secondary">Go Back</a>
</form>